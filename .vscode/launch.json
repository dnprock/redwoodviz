  "version": "0.2.0",
  "configurations": [
    {
      "command": "yarn redwood dev",
      "name": "launch development",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "launch api",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env.defaults",
      "program": "${workspaceFolder}/node_modules/.bin/dev-server"
    }
  ]
}
